      <main class="feed-container">
        <section class="feed__item">
          <div class="container-structure"></div>
        </section>
        <section class="feed__item feed__item--central">
          <article class="container-structure feed__post">
            <img id="bookmark" class="feed__post-bookmark clickable no-select" src="img/bookmark.svg">
            <header class="feed__post-header">
              <div id="profile" class="profile-container">
                <div class="profile-picture clickable">
                  <img src="img/profile-picture.svg">
                </div>
              </div>
              <div>
                <span class="feed__post-header--bold">Lucas Spartacus</span>
