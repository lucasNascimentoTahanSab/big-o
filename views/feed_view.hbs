  <body>

    <body>
      <nav>
        <div class="navbar__item"></div>
        <div class="navbar__item">
          <div class="navbar__item">
            <div class="input-search-container">
              <input class="input--without-border">
              <img class="input__image" src="img/search.svg">
            </div>
          </div>
          <button class="button--call-to-action no-select">Pesquisar</button>
        </div>
        <div class="navbar__item navbar__item--right">
          <div id="profile" class="profile-container">
            <div class="profile-picture clickable">
              <img src="img/profile-picture.svg">
            </div>
